	W, W, B, B, W, W, W, W,
	W, B, B, B, B, W, W, W,
	A, B, U, B, B, W, W, G,
	W, B, B, B, G, G, G, G,
	W, R, B, B, G, G, G, G,
	W, W, R, B, B, B, B, W,
	W, W, R, B, B, W, W, W,
	W, W, A, W, A, W, W, W
        ]
	sense.set_pixels(xmas_tree)
	sense.show_message("Merry xmas everyone!")
	sleep(1)
	xmas_tree = [
  L, W, L, L, L, L, W, L,
	W, L, W, L, L, W, L, W,
	L, W, W, L, L, W, W, L,
  L, L, L, W, W, L, L, L,
	L, L, L, W, W, L, L, L,
	L, W, W, L, L, W, W, L,
	W, L, W, L, L, W, L, W,
	L, W, L, L, L, L, W, L
	]
